    <a id="url" target="_blank" href="https://myplan.cloud/"><img id="logo" src="logo.svg" /></a>

    <script>
        function getCookie(cname) {
            let name = cname + "=";
            let decodedCookie = decodeURIComponent(document.cookie);
            let ca = decodedCookie.split(';');
            for(let i = 0; i <ca.length; i++) {
                let c = ca[i];
                while (c.charAt(0) == ' ') {
                c = c.substring(1);
                }
                if (c.indexOf(name) == 0) {
                return c.substring(name.length, c.length);
                }
            }
            return "";
        }

        let autorefresh = getCookie("autorefresh");
        if (autorefresh == 1) $("#checkbox").prop('checked', true);

        $('#checkbox').change(function(){
            if(this.checked){
                document.cookie = "autorefresh=1";
                autorefresh = 1;
            } else {
                document.cookie = "autorefresh=0";
                autorefresh = 0;
            }
        });

        setInterval(function(){
            if (autorefresh == 1) location.reload();
        }, 1000);

    </script>

</body>
